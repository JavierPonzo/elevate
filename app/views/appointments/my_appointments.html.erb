<h1 class="mb-5 text-center text-primary display-4 font-weight-bold text-shadow" style="color: #003665;">Mis Citas</h1>

<div class="container mb-5">
  <div class="row justify-content-center">
    <% @appointments.each do |appointment| %>
      <div class="col-md-4 col-lg-3 mb-4">
        <div class="card shadow border-0 h-100" style="border-radius: 12px; background-color: #FFFFFF;">
          <%= link_to appointment_path(appointment), class: "d-block" do %>
            <img src="https://i.ibb.co/8MBJYMk/Untitled-design-5.png" class="card-img-top" alt="Appointment Image" style="border-top-left-radius: 12px; border-top-right-radius: 12px; max-height: 150px; object-fit: cover;">
          <% end %>
          <div class="card-body text-center">
            <h5 class="card-title mb-3" style="color: #00BCD4;">
              <i class="fas fa-calendar-alt"></i> <%= appointment.date %>
            </h5>
            <p class="card-text" style="color: #00427A;">
              <i class="fas fa-info-circle"></i> <%= appointment.details %>
            </p>
            <p class="font-weight-bold" style="color: <%= appointment.status == 'completed' ? '#1EDD88' : '#FF6F61' %>;">
              <i class="fas fa-circle"></i> Estado: <%= appointment.status.capitalize %>
            </p>
          </div>
          <div class="card-footer bg-transparent text-center">
            <% if appointment.status == "pending" %>
              <button class="btn text-white font-weight-bold" style="background-color: #00427A; border-radius: 8px;">
                Confirmar
              </button>
            <% else %>
              <span class="text-muted">Completado</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
