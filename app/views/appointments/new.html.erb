<%= turbo_frame_tag "modal" do %>

<h1>Schedule a New Appointment</h1>

<%= form_with(model: @appointment) do |form| %>
  <% if @appointment.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul>
        <% @appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="appointment-form">
    <div class="form-group">
      <%= form.label :doctor_id, "Select Doctor", class: "form-label" %>
      <%= form.select :doctor_id, @doctors.collect { |doctor| [doctor.user.name + ' ' + doctor.user.last_name, doctor.id] }, { prompt: "Choose a Doctor" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :date, "Appointment Date", class: "form-label" %>
      <%= form.datetime_local_field :date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :details, "Additional Details", class: "form-label" %>
      <%= form.text_area :details, class: "form-control", rows: 4 %>
    </div>
    <div class="form-group text-center">
      <%= form.submit "Create Appointment", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= link_to 'Back to Appointments', appointments_path, class: "btn btn-secondary" %>
</div>

<%= link_to 'Cancel', '#', data: {
  controller: 'popup',
  action: 'popup#close'
} %>
<% end %>
