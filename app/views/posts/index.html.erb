<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black mt-5">
    <h1> Categoría: <%#= current_user.post.category %> </h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
    <% if current_user.doctor? %>
      <div class="mt-4">
        <%= link_to 'Crear Publicación', new_post_path, class: 'btn btn-primary btn-lg shadow-lg rounded-pill px-5' %>
      </div>
    <% end %>
  </div>
</div>

<!-- POSTS -->
<div class="container py-5">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to post_path(post), class: "text-decoration-none text-dark" do %>
          <div class="card-category">
            <div class="d-flex justify-content-center mb-3">
              <% if post.photos.attached? %>
                <% post.photos.each do |photo| %>
                  <%= cl_image_tag photo.key, class: "img-fluid mb-4 ms-3 me-3", alt: post.title %>
                <% end %>
              <% else %>
                <p>No imagen disponible</p>
              <% end %>
            </div>
            <h4><%= post.title %></h4>
            <h4><%= post.id %></h4>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
