<%= simple_form_for @post, html: { multipart: true, class: 'container mt-5' } do |f| %>
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h3 class="hero-title mb-0"><%= t('post.new.new_article') %></h3>
    </div>
    <div class="card-body">
      <div class="f-inputs mb-4">
        <%= f.input :title, label: t('post.new.title'), required: true, input_html: { class: 'form-control' } %>
      </div>

      <div class="f-inputs mb-4">
        <%= f.input :content, label: t('post.new.description'), as: :text, required: true, input_html: { class: 'form-control', rows: 4 } %>
      </div>

      <div class="f-inputs mb-4">
        <%= f.input :category, label: t('post.new.category'), required: true, input_html: { class: 'form-control' } %>
      </div>

      <div class="f-inputs mb-4">
        <%= f.input :photos, label: t('post.new.images'), as: :file, input_html: { class: 'form-control-file', multiple: true } %>
      </div>
    </div>

    <div class="card-footer text-center">
      <%= f.button :submit, t('post.new.submit_article'), class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
