<h1>Perfil de <%= @user.name %></h1>

<% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, alt: "Foto de perfil", class: "profile-photo" %>
<% else %>
  <%= image_tag "default_user.jpg", alt: "Foto de perfil por defecto", class: "profile-photo" %>
<% end %>

<p><strong>Email:</strong> <%= @user.email %></p>

<% if @user == current_user %>
  <%= link_to "Editar Perfil", edit_user_path(@user), class: "btn btn-primary" %>
<% end %>
