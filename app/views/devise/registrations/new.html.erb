<h2 class="hero-title text-center mb-4 mt-5">Regístrate</h2>

<div class="container shadow-lg p-5 rounded-5 mb-5 mt-5" style="background-color: #f8f9fa;">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "needs-validation" }) do |f| %>
    <%= f.error_notification %>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.input :name, required: true, autofocus: true, label: "Nombre", input_html: { class: "form-control" } %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.input :last_name, required: true, label: "Apellido", input_html: { class: "form-control" } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.input :email, required: true, label: "Email", input_html: { autocomplete: "email", class: "form-control" } %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.input :role,
                    collection: [["Doctor", "doctor"], ["Paciente", "patient"]],
                    required: true,
                    label: "Rol",
                    input_html: { class: "form-control" } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.input :password, required: true, label: "Contraseña", hint: "Mínimo 6 caracteres", input_html: { autocomplete: "new-password", class: "form-control" } %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.input :password_confirmation, required: true, label: "Confirmar Contraseña", input_html: { autocomplete: "new-password", class: "form-control" } %>
      </div>
    </div>

    <div class="mb-4">
      <%= f.input :avatar, as: :file, label: "Subir Avatar", input_html: { class: "form-control" } %>
    </div>

    <div class="text-center">
      <%= f.button :submit, "Registrar", class: "btn btn-primary btn-lg w-50" %>
    </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "btn btn-primary btn-lg w-50" %>
    </div>
</div>
