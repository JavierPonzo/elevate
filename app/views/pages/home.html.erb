<div class="container-fluid">
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1 class="hero-title"><%= t('home.hero_title') %></h1>
          <p class="hero-text"><%= t('home.hero_text') %></p>
          <div class="button-group mt-4">
            <%= link_to t('home.button_sexual_health'), posts_path(category: "salud_sexual"), class: "btn btn-primary btn-lg mb-2" %>
            <%= link_to t('home.button_mental_health'), posts_path(category: "salud_mental"), class: "btn btn-primary btn-lg mb-2" %>
          </div>
        </div>
        <div class="col-md-6 text-center">
          <img src="https://images.pexels.com/photos/7176029/pexels-photo-7176029.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Doctors Team" class="img-fluid">
        </div>
      </div>
    </div>
  </section>

  <section class="services-section py-5">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="section-title"><%= t('home.section_title') %></h2>
        <div class="section-underline mx-auto"></div>
      </div>
      <div class="row">
        <%= link_to posts_path(category: "salud_sexual"), class:"col-md-4 text-center border" do %>
        <div class="service-item">
          <i class="fa-solid fa-fire icon-ourservices"></i>
          <h5 class="service-title-home"><%= t('services.salud_sexual.title') %></h5>
          <p class="service-description"><%= t('services.salud_sexual.description').html_safe %></p>
        </div>
      <% end %>

      <%= link_to posts_path(category: "salud_mental"), class:"col-md-4 text-center border" do %>
        <div class="service-item">
          <i class="fa-solid fa-brain icon-ourservices"></i>
          <h5 class="service-title-home"><%= t('services.salud_mental.title') %></h5>
          <p class="service-description"><%= t('services.salud_mental.description').html_safe %></p>
        </div>
      <% end %>

      <div class="col-md-4 text-center border">
        <div class="service-item">
          <i class="fa-solid fa-comment icon-ourservices"></i>
          <h5 class="service-title-home"><%= t('services.consultas.title') %></h5>
          <p class="service-description"><%= t('services.consultas.description').html_safe %></p>
        </div>
      </div>

      <div class="col-md-4 text-center border">
        <div class="service-item">
          <i class="fa-regular fa-message icon-ourservices"></i>
          <h5 class="service-title-home"><%= t('services.foro.title') %></h5>
          <p class="service-description"><%= t('services.foro.description').html_safe %></p>
        </div>
      </div>

      <%= link_to questions_path, class:"col-md-4 text-center border" do %>
        <div class="service-item">
          <i class="fa-solid fa-robot icon-ourservices"></i>
          <h5 class="service-title-home"><%= t('services.chatbot.title') %></h5>
          <p class="service-description"><%= t('services.chatbot.description').html_safe %></p>
        </div>
      <% end %>

        <div class="col-md-4 text-center border">
          <div class="service-item">
            <i class="fa-solid fa-info icon-ourservices"></i>
            <h5 class="service-title-home"><%= t('services.info.title') %></h5>
            <p class="service-description"><%= t('services.info.description').html_safe %></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="container-fluid bg-dark-form text-white py-5 d-flex justify-content-center">
  <div class="row align-items-center w-60">
    <div class="col-lg-6 mb-4 text-center">
      <h2 class="fw-bold mb-3"><%= t('home.availability.title') %></h2>
      <p class="text-info-form"><%= t('home.availability.description_1').html_safe %></p>
      <p class="text-info-form"><%= t('home.availability.description_2') %></p>
      <div class="visit-hours mt-4">
        <p class="mb-2"><strong><%= t('home.availability.weekdays') %></strong></p>
        <p class="text-info-form">9:15 am – 9:30 pm</p>
        <p class="mb-2 mt-4"><strong><%= t('home.availability.weekends') %></strong></p>
        <p class="text-info-form">9:15 am – 1:00 pm</p>
      </div>
    </div>

    <div class="col-lg-6 d-flex justify-content-center">
      <div class="bg-primary-form p-4 rounded w-100">
        <h2 class="fw-bold text-white text-center"><%= t('home.appointment.title') %></h2>
        <form>
          <div class="text-white mb-3">
            <input type="text" class="custom-input w-100" placeholder="<%= t('home.appointment.name_placeholder') %>" required />
          </div>
          <div class="text-white mb-3">
            <input type="email" class="custom-input w-100" placeholder="<%= t('home.appointment.email_placeholder') %>" required />
          </div>
          <div class="text-white mb-3">
            <input type="text" class="custom-input w-100" placeholder="<%= t('home.appointment.topic_placeholder') %>" required />
          </div>
          <div class="mb-3">
            <input class="custom-input w-100" type="date" placeholder="<%= t('home.appointment.date_placeholder') %>" required />
          </div>
          <div class="mb-3">
            <textarea class="custom-textarea" rows="3" placeholder="<%= t('home.appointment.description_placeholder') %>" required></textarea>
          </div>
          <button type="submit" class="col-lg-4 btn btn-info text-white fw-bold">
            <%= t('home.appointment.submit_button') %>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Doctors Section -->
<div class="doctors-info container-fluid bg-turquoise py-5">
  <div class="text-center mb-5">
    <h2 class="text-white fw-bold"><%= t('home.doctors.title') %></h2>
    <p class="text-light"><%= t('home.doctors.description') %></p>
  </div>
  <div class="row text-center">
    <% doctors = [
      { name: 'specialist_1', specialty: 'specialty_1', image: 'https://images.pexels.com/photos/3714743/pexels-photo-3714743.jpeg' },
      { name: 'specialist_2', specialty: 'specialty_1', image: 'https://images.pexels.com/photos/5215024/pexels-photo-5215024.jpeg' },
      { name: 'specialist_3', specialty: 'specialty_2', image: 'https://images.pexels.com/photos/7578806/pexels-photo-7578806.jpeg' }
    ] %>
    <% doctors.each do |doctor| %>
      <div class="col-lg-4">
        <img src="<%= doctor[:image] %>" alt="<%= t("home.doctors.#{doctor[:name]}") %>" class="mb-3 img-doctors" width="200" height="300">
        <h4 class="text-white fw-bold"><%= t("home.doctors.#{doctor[:name]}") %></h4>
        <p class="text-light"><%= t("home.doctors.#{doctor[:specialty]}") %></p>
        <div class="social-icons">
          <a href="#" class="text-light me-3"><i class="fab fa-facebook"></i></a>
          <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
          <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
    <% end %>
  </div>
</div>


<!-- Testimonials -->
<div id="testimonialsCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active text-center">
      <h5 class="text-success"><%= t('home.testimonials.title') %></h5>
      <h2 class="fw-bold"><%= t('home.testimonials.subtitle') %></h2>
      <p class="fst-italic">"<%= t('home.testimonials.user_1') %>"</p>
      <img src="https://images.pexels.com/photos/733872/pexels-photo-733872.jpeg" class="mx-auto d-block img-thumbnail rounded-circle" alt="User 1" width="140" height="160">
      <p class="mt-3 fw-bold">Peggy Carter</p>
      <p class="text-muted fw-bold">(Patient)</p>
    </div>

    <div class="carousel-item text-center">
      <h5 class="text-success"><%= t('home.testimonials.title') %></h5>
      <h2 class="fw-bold"><%= t('home.testimonials.subtitle') %></h2>
      <p class="fst-italic">"<%= t('home.testimonials.user_2') %>"</p>
      <img src="https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg" class="mx-auto d-block img-thumbnail rounded-circle" alt="User 2" width="140" height="160">
      <p class="mt-3 fw-bold">Tony Stark</p>
      <p class="text-muted fw-bold">(Patient)</p>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


<!-- Statistics Section -->
  <div class="container-numbers-principal">
    <div class="container container-numbers text-center py-5 bg-gray mb-3 rounded-3">
      <h2 class="mb-3"><%= t('home.statistics.title') %></h2>
      <p class="mb-5"><%= t('home.statistics.description') %></p>
      <div class="row justify-content-center">
        <% stats = [
          { icon: 'fa-thumbs-up', key: 'satisfied_users', value: '406+' },
          { icon: 'fa-award', key: 'awards', value: '4+' },
          { icon: 'fa-handshake-angle', key: 'resolved_cases', value: '52+' },
          { icon: 'fa-face-laugh-wink', key: 'years_experience', value: '15+' }
        ] %>
        <% stats.each do |stat| %>
          <div class="col-md-3 col-sm-6 mb-4">
            <div class="card shadow border-0">
              <div class="card-body">
                <i class="fa-solid <%= stat[:icon] %> icon-ourservices-data"></i>
                <h3 class="text-primary data"><%= stat[:value] %></h3>
                <p class="text-muted"><%= t("home.statistics.#{stat[:key]}") %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "pages/chatbot" %>
  </div>
</div>
