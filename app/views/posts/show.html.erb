<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-12 col-lg-12 shadow-sm mt-4 p-4 rounded">
      <h1 class="mb-3"><%= current_user.name %></h1>
      <div class="d-flex">
        <div class="mb-4">
        <% @post.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: "img-fluid mb-4 ms-3 me-3", alt: @post.title %>
        <% end %>
        </div>
        <div>

          <p class="mb-4"><strong></strong> <%= current_user.name %></p>

          <p class="mb-4"><strong>Category:</strong> <%= @post.category %></p>

          <p class="mb-4"><strong>Description:</strong> <%= @post.content %></p>



          <div class="d-flex justify-content-between mt-4">
            <%= link_to "Back to Home", posts_path, class: "btn btn-outline-primary" %>
          </div>
          <div>
            <%= button_to "Eliminar Post", post_path(@post), method: :delete, data: { confirm: "Estas seguro que deseas borrarlo?" }, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#appointmentModal">
  New Appointment
</button>

<div class="modal fade" id="appointmentModal" tabindex="-1" aria-labelledby="appointmentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="appointmentModalLabel">New Appointment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @appointment, local: true) do |form| %>

          <div class="form-group">
            <%= form.label :doctor_id, "Select Doctor", class: "form-label" %>
            <%= form.select :doctor_id, @doctors.collect { |doctor| [doctor.user.name, doctor.id] }, {}, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :date, "Appointment Date", class: "form-label" %>
            <%= form.datetime_local_field :date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :details, "Additional Details", class: "form-label" %>
            <%= form.text_area :details, class: "form-control", rows: 4 %>
          </div>

          <div class="text-center">
            <%= form.submit "Create Appointment", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= form_with model: @question_answer, local: true do |f| %>
  <div class="row-fluid">
    <div class="span6">

      <div class="mb-3">
        <%= f.label :question, "Your Question" %>
        <%= f.text_field :question, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :answer, "Answer (if available)" %>
        <%= f.text_area :answer, class: "form-control", disabled: @question_answer %>
      </div>

      <%= f.submit "Submit Question", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


<div class="list-group">
  <% @post.reviews.each do |review| %>
    <li class="list-group-item">
      <small>
        <% count = 0 %>
        <% 5.times do %>
          <% if review.rating > count %>
            <i class="fa-solid fa-star"></i>
          <% else %>
            <i class="fa-regular fa-star"></i>
          <% end %>
          <% count += 1 %>
        <% end %>
      </small>
      <p><%= review.content %></p>
    </li>
  <% end %>

  <%= simple_form_for [@post, Review.new] do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>

<% if @post.doctor_id == current_user.doctor&.id %>
  <div class="mt-3 text-center">
    <%= link_to 'Editar', edit_post_path(@post), class: 'btn btn-warning btn-lg' %>
  </div>
<% end %>
