<h1 class="hero-title"><%= t("question_answers.new.title") %></h1>

<%= form_with(model: [@post, @question_answer], local: true) do |form| %>
  <% if @question_answer.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= t("question_answers.new.errors", count: @question_answer.errors.count) %></h4>
      <ul>
        <% @question_answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :question, t("question_answers.new.label") %>
    <%= form.text_area :question, class: "form-control", placeholder: t("question_answers.new.placeholder"), rows: 4 %>
  </div>

  <div class="form-group">
    <%= form.submit t("question_answers.new.submit"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to t("question_answers.new.back_to_post"), post_path(@post), class: 'btn btn-secondary' %>
