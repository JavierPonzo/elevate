<div class="container-navbar">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="navbar">
    <div class="container-fluid">
      <%= link_to root_path do %>
        <img src="https://i.ibb.co/Hx7WXCs/1.png" alt="Elevate Logo" style="height: 270px; width: auto;">
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "Mis Citas", my_appointments_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
          <% if current_user&.doctor? %>
            <%= link_to "Mis Publicaciones", my_posts_path, class: "nav-link" %>
          <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Sobre Nosotros", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Artículos", posts_path, class: "nav-link" %>

          </li>
          <li class="nav-item dropdown">
  <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar" alt="User avatar">
  </a>
  <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
    <% if current_user %>
      <%= link_to "Editar Perfil", edit_user_path(current_user), class: "dropdown-item" %>
      <%= link_to "Cerrar Sesión", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
    <% else %>
      <%= link_to "Iniciar Sesión", new_user_session_path, class: "dropdown-item" %>
    <% end %>
  </div>
</li>

        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("scroll", function () {
    const navbar = document.getElementById("navbar");
    if (window.scrollY > 50) {
      navbar.classList.add("navbar-scrolled");
    } else {
      navbar.classList.remove("navbar-scrolled");
    }
  });
</script>
