<div class="container">
  <div class="row align-items-center min-vh-100">
    <div class="col-4"></div>
    <div class="col-4">
      <div class="card p-4 shadow-sm border">
        <h2 class="hero-title text-center mb-4">Iniciar sesión</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: "form-control", autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { class: "form-control", autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions text-center mt-3">
            <%= f.button :submit, "Iniciar sesión", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-4"></div>
  </div>
</div>
