<!-- Footer -->
<footer class="bg-primary-footer text-white mb-0 footer">
  <div class="container pb-1">
    <div class="row">
      <div class="col-md-3">
        <h5 class="fw-bold"><%= t('footer.health_title') %> <span class="text-success"><%= t('footer.health_highlight') %></span></h5>
        <hr class="bg-white mb-3 mt-1" style="width: 60px; height: 2px;">
        <p><%= t('footer.health_description') %></p>
        <div class="d-flex gap-2 justify-content-center">
          <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
          <a href="#" class="text-white"><i class="fab fa-facebook"></i></a>
          <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
        </div>
      </div>

      <div class="col-md-3 mb-4">
        <h5 class="fw-bold"><%= t('footer.services_title') %></h5>
        <hr class="bg-white mb-3 mt-1" style="width: 60px; height: 2px;">
        <ul class="list-unstyled">
          <li><%= t('footer.service_education') %></li>
          <li><%= t('footer.service_therapy') %></li>
          <li><%= t('footer.service_mental_health') %></li>
          <li><%= t('footer.service_sexual_health') %></li>
          <li><%= t('footer.service_depression') %></li>
        </ul>
      </div>

      <div class="col-md-3 mb-4">
        <h5 class="fw-bold"><%= t('footer.contact_title') %></h5>
        <hr class="bg-white mb-3 mt-1" style="width: 60px; height: 2px;">
        <p><strong><%= t('footer.contact_location') %>:</strong> Av. El Sol 254, Lima, Perú</p>
        <p><strong><%= t('footer.contact_email') %>:</strong> info@elevate.com</p>
        <p><strong><%= t('footer.contact_support') %>:</strong> +51 900 912 854</p>
      </div>

      <div class="col-md-3 mb-4">
        <h5 class="fw-bold"><%= t('footer.locations_title') %></h5>
        <hr class="bg-white mb-3 mt-1" style="width: 60px; height: 2px;">
        <div id="footer-map" style="height: 200px; width: 100%; border-radius: 10px; overflow: hidden;"></div>
      </div>
    </div>

    <div class="row">
      <div class="col text-center">
        <p class="mb-0">&copy; ELEVATE. <%= t('footer.rights_reserved') %></p>
      </div>
    </div>
  </div>
</footer>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var map = L.map('footer-map').setView([-12.0464, -77.0428], 12);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    L.marker([-12.0766, -77.0293]).addTo(map)
      .bindPopup('Doctor Juan Perez: Av. de las Américas 1049, La Victoria.');

    L.marker([-11.9920, -77.0603]).addTo(map)
      .bindPopup('Doctora Laura Martinez: Av. Carlos Izaguirre 126, Independencia.');
  });
</script>
