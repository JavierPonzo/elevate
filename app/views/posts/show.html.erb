<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-12 col-lg-12 shadow-sm mt-4 p-4 rounded">
      <h1 class="mb-3"><%= current_user.name %></h1>
      <div class="d-flex">
        <div class="mb-4">
        <% @post.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: "img-fluid mb-4 ms-3 me-3", alt: @post.title %>
        <% end %>
        </div>
        <div>

          <p class="mb-4"><strong></strong> <%= current_user.name %></p>

          <p class="mb-4"><strong>Category:</strong> <%= @post.category %></p>

          <p class="mb-4"><strong>Description:</strong> <%= @post.content %></p>


          <div class="d-flex justify-content-between mt-4">
            <%= link_to "Back to Home", posts_path, class: "btn btn-outline-primary" %>
          </div>
          <div>
            <%= button_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= simple_form_for [@post, @question_answer] do |f| %>
  <div class="row-fluid">
    <div class="span6">

      <div class="mb-3">
        <%= f.label :question, "Your Question" %>
        <%= f.text_field :question, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :answer, "Answer (if available)" %>
        <%= f.text_area :answer, class: "form-control", disabled: @question_answer %>
      </div>

      <%= f.submit "Submit Question", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="list-group mt-4">
  <h3>Preguntas y Respuestas</h3>
  <% @post.question_answers.each do |question_answer| %>
    <div class="list-group-item">
      <p><strong>Pregunta:</strong> <%= question_answer.question %></p>
      <% if question_answer.answer.present? %>
        <p><strong>Respuesta:</strong> <%= question_answer.answer %></p>
      <% else %>
        <p><em>Esta pregunta aÃºn no tiene respuesta.</em></p>
      <% end %>
    </div>
  <% end %>
</div>

<div class="list-group">
  <% @post.reviews.each do |review| %>
    <li class="list-group-item">
      <small>
        <% count = 0 %>
        <% 5.times do %>
          <% if review.rating > count %>
            <i class="fa-solid fa-star"></i>
          <% else %>
            <i class="fa-regular fa-star"></i>
          <% end %>
          <% count += 1 %>
        <% end %>
      </small>
      <p><%= review.content %></p>
    </li>
  <% end %>

  <%= simple_form_for [@post, Review.new] do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>

<% if @post.doctor_id == current_user.doctor&.id %>
  <div class="mt-3 text-center">
    <%= link_to 'Editar', edit_post_path(@post), class: 'btn btn-warning btn-lg' %>
  </div>
<% end %>
